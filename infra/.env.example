# B2B Workflow Automation Kit - Environment Variables
# Copy this to .env and customize

# App
BWFA_DEBUG=false
BWFA_SECRET_KEY=change-me-use-openssl-rand-hex-32

# Database
BWFA_DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/automationdb
BWFA_DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/automationdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=automationdb

# Redis
BWFA_REDIS_URL=redis://redis:6379/0

# Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
BWFA_MASTER_ENCRYPTION_KEY=change-me-generate-fernet-key

# Admin auth
BWFA_ADMIN_EMAIL=admin@example.com
BWFA_ADMIN_PASSWORD=change-me-strong-password

# Local 7B model (optional - set to true if running llama.cpp)
BWFA_LOCAL_MODEL_ENABLED=false
BWFA_LOCAL_MODEL_URL=http://llama:8081/completion

# Platform Anthropic key (testing only - normally tenants use BYOK)
BWFA_PLATFORM_KEY_MODE=false
BWFA_PLATFORM_ANTHROPIC_KEY=

# Safety defaults
BWFA_AUTOSEND_ENABLED=false
BWFA_DEFAULT_CONFIDENCE_THRESHOLD=0.85

# SMTP (optional)
BWFA_SMTP_HOST=
BWFA_SMTP_PORT=587
BWFA_SMTP_USER=
BWFA_SMTP_PASSWORD=
BWFA_SMTP_USE_TLS=true

# Slack (optional platform fallback)
BWFA_SLACK_WEBHOOK_URL=

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
